[user]
  name = Joseph Pearson
  email = jpearson@overdrive.com

[core]
  excludesfile = ~/.gitignore
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  autocrlf = false
  eol = lf

[branch]
  autosetuprebase = always

[alias]
  st = status -s
  co = checkout
  br = branch
  d = diff -b
  dc = diff -b --cached
  dw = diff -b --word-diff
  rc = rebase --continue
  l = log '--pretty=format:%Cblue%h%d%Creset %ar %Cgreen%an%Creset %s' --graph
  treebranches = log --graph --simplify-by-decoration --pretty=format:'%d' --all

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
